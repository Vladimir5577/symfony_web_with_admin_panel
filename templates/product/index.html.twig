{% extends 'base.html.twig' %}

{% block title %}Продукты{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Продукты</h1>

    {% if products is empty %}
        <p>Нет продуктов.</p>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {% if product.image %}
                            <img src="{{ ('uploads/images/' ~ product.image) | imagine_filter('thumbnail') }}" class="card-img-top" alt="{{ product.name }}" style="object-fit: cover; height: 200px;">
                            <img src="{{ ('uploads/images/' ~ product.image) | imagine_filter('medium') }}" class="card-img-top" alt="{{ product.name }}" style="object-fit: cover; height: 200px;">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Нет изображения</span>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            {% if product.description %}
                                <p class="card-text text-muted small">
                                    {{ product.description|length > 100 ? product.description|slice(0, 100) ~ '...' : product.description }}
                                </p>
                            {% endif %}
                            {% if product.price is not null %}
                                <p class="card-text fw-bold">{{ product.price|number_format(2, ',', ' ') }} ₽</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
